<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:weightSum="1"
    android:background="#097cef"
    android:layout_height="48dp">
    <View
        android:layout_width="18dp"
        android:layout_height="48dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/bar_seek_search"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="10dp"
            android:hint=" 筛选"
            android:layout_marginTop="8dp"
            android:paddingRight="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textSize="@dimen/big_small_text"
            android:background="@drawable/seek_search_bg"
            android:drawableRight="@drawable/seek_search"
            android:textColor="#fff"/>
    </LinearLayout>
    <TextView
        android:id="@+id/bar_seek_setting"
        android:text="设置"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/big_medium_text"
        android:layout_width="48dp"
        android:layout_height="48dp"/>

</LinearLayout>