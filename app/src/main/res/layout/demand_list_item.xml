<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="75dp"
        android:layout_height="75dp">

        <TextView
            android:id="@+id/tv_zjz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:text="征集中"
            android:textSize="@dimen/big_medium_text" />
        <ImageView
            android:id="@+id/img_header"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_head_for_empty" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/l_zjz"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别:"
                    android:textSize="@dimen/micro_text" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:textSize="@dimen/micro_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份:"
                    android:textSize="@dimen/micro_text" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在校老师"
                    android:textSize="@dimen/micro_text" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/l_zjh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="李刚"
                    android:textSize="@dimen/micro_text" />
                <TextView
                    android:id="@+id/tv_type2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(在校学生)"
                    android:textSize="@dimen/micro_text" />

                <TextView
                    android:id="@+id/tv_sex2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:textSize="@dimen/micro_text" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间:"
                    android:textSize="@dimen/micro_text" />

                <TextView
                    android:id="@+id/tv_appointed_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-04-01 22:10"
                    android:textSize="@dimen/micro_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计费:"
                    android:textSize="@dimen/micro_text" />

                <TextView
                    android:id="@+id/tv_charging"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11￥/小时"
                    android:textSize="@dimen/micro_text" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="科目:"
                    android:textSize="@dimen/micro_text" />

                <TextView
                    android:id="@+id/tv_curriculum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="初中数学"
                    android:textSize="@dimen/small_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址:"
                    android:textSize="@dimen/micro_text" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxEms="5"
                    android:singleLine="true"
                    android:text="渝北区双凤桥街道"
                    android:textSize="@dimen/micro_text" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="地点:"
                    android:textSize="@dimen/micro_text" />

                <TextView
                    android:id="@+id/tv_place"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxEms="5"
                    android:singleLine="true"
                    android:text="学生家"
                    android:textSize="@dimen/micro_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l_zjz_p"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好评率:"
                    android:textSize="@dimen/micro_text" />

                <TextView
                    android:id="@+id/tv_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90%"
                    android:textSize="@dimen/micro_text" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/l_zjh_m"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="方式:"
                    android:textSize="@dimen/micro_text" />
                <TextView
                    android:id="@+id/tv_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一对一"
                    android:textSize="@dimen/micro_text" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/l_zjh_s"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="0.5">
                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已完成"
                    android:textSize="@dimen/micro_text" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>