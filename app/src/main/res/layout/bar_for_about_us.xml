<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bar_bg_color">
    <TextView
        android:id="@+id/tv_about_us_back"
        android:layout_alignParentLeft="true"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:drawableLeft="@drawable/ic_tab_back"
        android:paddingLeft="18sp"
        android:textSize="@dimen/big_small_text"
        android:gravity="center_vertical"
        android:visibility="visible"
        android:text=""/>
    <TextView
        android:id="@+id/bar_about_us_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/bar_height"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:text="@string/mine_about_us_title"
        android:textColor="@color/bar_text_color"
        android:textSize="@dimen/big_medium_text" />
</RelativeLayout>